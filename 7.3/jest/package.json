{
  "name": "jest-coverage-project",
  "version": "1.0.0",
  "description": "Project with Jest test coverage",
  "main": "index.js",
  "scripts": {
    "test": "jest",
    "coverage": "jest --collectCoverage"
  },
  "devDependencies": {
    "jest": "^29.0.0"
  },
  "jest": {
    "collectCoverageFrom": [
      "**/*.{js,jsx}",
      "!**/node_modules/**",
      "!**/coverage/**"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 100,
        "functions": 100,
        "lines": 100,
        "statements": 100
      }
    },
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ]
  },
  "keywords": [
    "jest",
    "testing",
    "coverage"
  ],
  "author": "Your Name",
  "license": "MIT"
}